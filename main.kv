<ItemDrawer>:
    theme_text_color: "Custom"
    on_release:
        self.parent.set_color_item(self)

    IconLeftWidget:
        id: icon
        icon: root.icon
        theme_text_color: "Custom"
        text_color: root.text_color


<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height

        Image:
            id: avatar
            size_hint: None, None
            size: "56dp", "56dp"
            source: "data/logo/kivy-icon-256.png"

    MDLabel:
        text: "Navigate to Screen"
        font_style: "Button"
        size_hint_y: None
        height: self.texture_size[1]

    MDLabel:
        text: "KivyMD Nav Drawer and Screen Manager"
        font_style: "Caption"
        size_hint_y: None
        height: self.texture_size[1]

    ScrollView:

        DrawerList:
            id: md_list

Screen:
    id: scr
    NavigationLayout:

        ScreenManager:
            id: screen_manager
            Screen:
                name: "screen1"
                BoxLayout:
                    orientation: 'vertical'

                    MDToolbar:
                        title: "Your app"
                        md_bg_color: app.theme_cls.primary_color
                        left_action_items: [['menu', lambda x: nav_drawer.set_state("toggle")]]
                    
                    Widget:
                    
            Screen:
                name: "screen2"
                BoxLayout:
                    orientation: 'vertical'

                    MDToolbar:
                        title: "Screen 2"
                        md_bg_color: app.theme_cls.primary_color
                        left_action_items: [['menu', lambda x: nav_drawer.set_state("toggle")]]
                    
                    Widget:

        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                id: content_drawer

